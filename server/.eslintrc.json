{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 140,
        "singleQuote": true,
        "bracketSameLine": false,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    ]
  },
  "env": {
    "node": true,
    "es2020": true
  }
}
